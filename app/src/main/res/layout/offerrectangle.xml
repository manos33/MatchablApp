<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/offerrecimg"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="495dp" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="168dp"
        android:layout_height="187dp"
        app:srcCompat="@drawable/fieldexample"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="467dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Star Sport Club"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="504dp" />

    <ImageView
        android:id="@+id/ic_address"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/address"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="543dp" />

    <TextView
        android:id="@+id/addresstxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Λεωφ.  Αλκυονίδων 4,\nΒούλα 16673"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="534dp" />


    <ImageView
        android:id="@+id/ic_sportsinfo"
        android:layout_width="21dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/infosport"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="582dp" />

    <TextView
        android:id="@+id/sportsinfotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football, Basketball,\nTennis, Volleyball"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="581dp" />

    <TextView
        android:id="@+id/offernum"
        android:layout_width="119dp"
        android:layout_height="67dp"
        android:text="20%"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="523dp" />


</androidx.constraintlayout.widget.ConstraintLayout>