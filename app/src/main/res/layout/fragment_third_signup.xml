<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-104dp"
        tools:layout_editor_absoluteY="-78dp">

        <ImageView
            android:id="@+id/profileSetupImg"
            android:layout_width="287dp"
            android:layout_height="79dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/profsetupimg" />

        <TextView
            android:id="@+id/footballLabel"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/sportstxt_rounded_background"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Football"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/footballRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_background"
            android:numStars="5"
            android:progressTint="@color/matchablgreen"
            android:secondaryProgressTint="@color/matchablgreen"
            android:stepSize="1" />

        <TextView
            android:id="@+id/tennisLabel"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/sportstxt_rounded_background"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Tennis"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/tennisRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_background"
            android:numStars="5"
            android:progressTint="@color/matchablgreen"
            android:secondaryProgressTint="@color/matchablgreen"
            android:stepSize="1" />

        <TextView
            android:id="@+id/basketLabel"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/sportstxt_rounded_background"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Basketball"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/basketRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_background"
            android:numStars="5"
            android:progressTint="@color/matchablgreen"
            android:secondaryProgressTint="@color/matchablgreen"
            android:stepSize="1" />

        <TextView
            android:id="@+id/volleyLabel"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/sportstxt_rounded_background"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Volleyball"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/volleyRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_background"
            android:numStars="5"
            android:progressTint="@color/matchablgreen"
            android:secondaryProgressTint="@color/matchablgreen"
            android:stepSize="1" />

        <ImageView
            android:id="@+id/dotsImg"
            android:layout_width="37dp"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dp"
            android:src="@drawable/dots3" />

        <Button
            android:id="@+id/finishButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button_background"
            android:text="Finish"
            android:textAllCaps="false"
            android:textSize="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
